@model List<Client>
@{
    ViewData["Title"] = "AllClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AllClient</h1>
<table id="AllClient" class="table  hover">
    <thead>
        <tr>
            <th class="th-sm">
                ID
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                SurName
            </th>
            <th class="th-sm">
                PhoneNumber
            </th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].SurName</td>
                <td>@Model[i].TelePhoneNr</td>
                <td>
                    <a onclick="showDiv(@Model[i].Id)" id="@Model[i].Id" class="btn btn-danger">
                        <i class="fa fa-trash-alt"></i>
                    </a>
                    <div id="div_@Model[i].Id" class="row" style="display:none">
                        Əminsənmi?
                        <form method="post" asp-action="Delete" asp-route-Id="@Model[i].Id">
                            <button onclick="hidenDiv(@Model[i].Id)" type="submit" id="@Model[i].Id" class="btn btn-danger">
                                Bəli
                            </button>
                        </form>
                        <a onclick="hidenDiv(@Model[i].Id)" class="btn btn-success">
                            Xeyr
                        </a>
                    </div>
                    <a asp-controller="Client" asp-action="Update" asp-route-Id="@Model[i].Id" class="btn btn-primary">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>

            </tr>
        }

    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#AllClient').DataTable();
        });

        function hidenDiv(id) {
            var divid = "#div_" + id;
            $(divid).hide();
        }
        function showDiv(id) {
            var divid = "#div_" + id;
            console.log(divid);
            $(divid).show();
        }

    </script>
}